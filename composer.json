{
    "name": "meditate/greeting",
    "type": "library",
    "description": "a composer package demo",
    "keywords": [
        "meditate",
        "greeting"
    ],
    "homepage": "https://github.com/meditate/greeting",
    "license": "MIT",
    "authors": [
        {
            "name": "Shengyou",
            "email": "shengyoufan@gmail.com",
            "homepage": "https://github.com/shengyou",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Meditate\\Greeting\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Meditate\\Greeting\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {

    },
    "config": {
        "sort-packages": true
    }
}
